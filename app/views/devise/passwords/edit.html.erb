<% provide :title, t("Change your password") %>
<h2><%= yield(:title) %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: { ajax: false } }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="ui-field-contain">
    <%= f.label :password, t("New password") %>
    <%= f.password_field :password, autofocus: true %>
  </div>

  <div class="ui-field-contain">
    <%= f.label :password_confirmation, t("Confirm new password") %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div><%= f.submit t("Change my password"), class: "ui-inline" %></div>
<% end %>

<%= render "devise/shared/links" %>
