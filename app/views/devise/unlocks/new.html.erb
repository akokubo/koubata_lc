<% provide :title, t("Resend unlock instructions") %>
<h2><%= yield(:title) %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, data: { ajax: false } }) do |f| %>
  <%= devise_error_messages! %>

  <div class="ui-field-contain">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div><%= f.submit t("Resend unlock instructions"), data: { ajax: false }, class: "ui-inline" } %></div>
<% end %>

<%= render "devise/shared/links" %>
