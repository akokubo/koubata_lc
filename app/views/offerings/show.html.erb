<% provide :title, @class_name.model_name.human %>
<h1><%= yield(:title) %></h1>

<% if current_user?(@task.user) %>
  <div class="ui-body ui-body-a ui-corner-all">
<% end %>

<%= render 'tasks/task' %>

<% if current_user?(@task.user) %>
    <%= link_to t('Edit'), edit_offering_path(@task), class: "ui-btn ui-btn-inline" %>
    <%= link_to t('Destroy'), @task, method: :delete, data: { confirm: t('Are you sure?') }, class: "ui-btn ui-btn-inline" %>
  </div>
  <%= link_to t('Back to my offerings'), offerings_user_path(current_user), data: { role: :button, icon: "arrow-l" } %>
<% end %>

<%= render 'offerings/entry' if !current_user?(@task.user) %>

<% if !current_user?(@task.user) %>
  <%= link_to t('Back'), offerings_path, class: "ui-btn ui-icon-arrow-l ui-btn-icon-left"  %>
<% end %>
