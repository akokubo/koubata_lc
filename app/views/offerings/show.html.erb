<% provide :title, t('activerecord.models.offering') %>
<h1><%= yield(:title) %></h1>

<p>
  <strong><%= Offering.human_attribute_name(:title) %>:</strong>
  <%= @offering.title %>
</p>

<p>
  <strong><%= Offering.human_attribute_name(:category) %>:</strong>
  <%= @offering.category.name %>
</p>

<p>
  <strong><%= Offering.human_attribute_name(:description) %>:</strong>
  <%= @offering.description %>
</p>

<p>
  <strong><%= Offering.human_attribute_name(:price) %>:</strong>
  <%= @offering.price %>
</p>

<p>
  <strong><%= Offering.human_attribute_name(:expired_at) %>:</strong>
  <%= @offering.expired_at.try(:strftime, "%Y/%m/%d %H:%M") %>
</p>


<%= link_to t('Edit'), edit_offering_path(@offering) %> |
<%= link_to t('Destroy'), @offering, method: :delete, data: { confirm: t('Are you sure?') } %> |
<%= link_to t('Back'), offerings_user_path(current_user) %>
