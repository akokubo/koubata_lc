<h3>取引の内容</h3>
<ul data-role="listview" data-inset="true">
  <li>
    <strong><%= Task.human_attribute_name(:title) %>:</strong>
    <%= @task.title %>
  </li>

  <li>
    <strong><%= Task.human_attribute_name(:category) %>:</strong>
    <%= @task.category.name %>
  </li>

  <li>
    <h2><%= Task.human_attribute_name(:description) %>:</h2>
    <p><%= simple_format @task.description %></p>
  </li>

  <li>
    <strong><%= Task.human_attribute_name(:price_description) %>:</strong>
    <%= @task.price_description %>
  </li>
</ul>
