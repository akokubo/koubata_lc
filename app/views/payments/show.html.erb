<% provide :title, Payment.model_name.human %>
<h1><%= yield(:title) %></h1>


<ul data-role="listview" data-inset="true">
<li>
  <strong>日時:</strong>
  <%= l(@payment.created_at) %>
</li>

<% if @payment.direction == "withdraw" %>
<li>
  <strong>支払人:</strong>
  <%= @payment.partner.name %>
</li>

<li>
  <strong>受取人:</strong>
  <%= @payment.user.name %>
</li>
<% else %>
<li>
  <strong>支払人:</strong>
  <%= @payment.user.name %>
</li>

<li>
  <strong>受取人:</strong>
  <%= @payment.partner.name %>
</li>
<% end %>

<li>
  <strong><%= Payment.human_attribute_name(:subject) %>:</strong>
  <%= @payment.subject %>
</li>

<li>
<% if @payment.direction == "withdraw" %>
  <strong>受取<%= Payment.human_attribute_name(:amount) %>:</strong>
  <%= @payment.amount %><%= t('points') %>
<% else %>
  <strong>支払<%= Payment.human_attribute_name(:amount) %>:</strong>
  <%= -@payment.amount %><%= t('points') %>
<% end %>
</li>

<li>
  <strong><%= Payment.human_attribute_name(:balance) %>:</strong>
  <%= @payment.balance %><%= t('points') %>
</li>

<li>
  <h2><%= Payment.human_attribute_name(:comment) %>:</h2>
  <p><%= simple_format @payment.comment %></p>
</li>
</ul>

  <%= link_to t('Back'), accounts_path, class: "ui-btn" %>
