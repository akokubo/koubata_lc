<% provide :title, t('activerecord.models.payment') %>
<h1><%= yield(:title) %></h1>

<ul data-role="listview" data-inset="true">
<li>
  <h2><%= Payment.human_attribute_name(:from) %>:</h2>
  <p><%= @payment.from.user.name %></p>
</li>

<li>
  <h2><%= Payment.human_attribute_name(:to) %>:</h2>
  <p><%= @payment.to.user.name %></p>
</li>

<li>
  <h2><%= Payment.human_attribute_name(:subject) %>:</h2>
  <p><%= @payment.subject %></p>
</li>

<li>
  <h2><%= Payment.human_attribute_name(:amount) %>:</h2>
  <p><%= @payment.amount %><%= t('points') %></p>
</li>
<li>
  <h2><%= Payment.human_attribute_name(:balance) %>:</h2>
  <p><%= @payment.balance %><%= t('points') %></p>
</li>

<li>
  <h2><%= Payment.human_attribute_name(:comment) %>:</h2>
  <p><%= simple_format @payment.comment %></p>
</li>
</ul>
